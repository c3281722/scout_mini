<launch>
  <!-- EKF node to fuse odom, IMU, and optionally LIO -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_local_node" output="screen" clear_params="true">
    <rosparam>
      frequency: 50
      sensor_timeout: 0.1
      two_d_mode: false
      publish_tf: true
      map_frame: map
      odom_frame: odom
      base_link_frame: base_link
      world_frame: odom

      odometry0: /odom
      odometry0_config: [true, true, false,
                         false, false, false,
                         false, false, true,
                         false, false, false,
                         false, false, false]
      odometry0_queue_size: 10
      odometry0_differential: false
      odometry0_relative: false

      odometry1: /lio_odometry
      odometry1_config: [true, true, true,
                         false, false, false,
                         true, true, true,
                         false, false, false,
                         false, false, false]
      odometry1_queue_size: 10
      odometry1_differential: false
      odometry1_relative: false

      imu0: /livox/imu
      imu0_config: [false, false, false,
                    true,  true,  true,
                    false, false, false,
                    true,  true,  true,
                    false, false, false]
      imu0_differential: false
      imu0_relative: true
      imu0_remove_gravitational_acceleration: true

      use_control: false
      stamped_control: false
      debug: false
      print_diagnostics: true

      # Helpful during development
      publish_acceleration: false
      publish_velocity: true

      # If you are using odometry with 0 covariance
      ignore_zero_covariance: true
    </rosparam>
  </node>
</launch>
